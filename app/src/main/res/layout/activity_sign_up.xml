<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/activity_sign_up"
        android:layout_width="match_parent"
        android:layout_height="650sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#003366"
        tools:context=".SignUpActivity">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:text="Register"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#bfdfdf" />
        <View
            android:layout_width="300sp"
            android:layout_height="1px"
            android:background="#495669"
            android:layout_below="@+id/textViewTitle"
            android:layout_marginTop="65sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view1" />

        <View
            android:id="@+id/view2"
            android:layout_width="300sp"
            android:layout_height="1px"
            android:layout_below="@+id/view1"
            android:layout_alignStart="@+id/view1"
            android:layout_alignLeft="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#495669" />

        <View
            android:id="@+id/view3"
            android:layout_width="300sp"
            android:layout_height="1px"
            android:layout_below="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#495669" />

        <View
            android:id="@+id/view4"
            android:layout_width="300sp"
            android:layout_height="1px"
            android:layout_below="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="112dp"
            android:background="#495669" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_alignStart="@+id/view1"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignBottom="@+id/editTextEmail"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/user_32px" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_below="@+id/view2"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_marginTop="14dp"
            android:src="@drawable/lock_32px" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_below="@+id/view2"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_marginTop="74dp"
            android:src="@drawable/lock_32px" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:gravity="center"
            android:hint="Email"
            android:textColor="#898A83"
            android:textColorHint="#898A83" />


        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-56dp"
            android:background="@null"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#898A83"
            android:textColorHint="#898A83" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:gravity="center"
            android:hint=" Password"
            android:inputType="textPassword"
            android:textColor="#898A83"
            android:textColorHint="#898A83" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="330sp"
            android:layout_height="50sp"
            android:layout_below="@+id/view4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="@drawable/button_back"
            android:onClick="register"
            android:text="Register"
            android:textColor="#bfdfdf"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnvery"
            android:layout_width="330sp"
            android:layout_height="50sp"
            android:layout_below="@+id/view4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="139dp"
            android:background="@drawable/button_back"
            android:onClick="proceed"
            android:text="Verified"
            android:textColor="#bfdfdf"
            android:textSize="15sp" />


    </RelativeLayout>
</ScrollView>