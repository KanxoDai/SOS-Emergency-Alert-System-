<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="650sp"
    android:background="#cccccc"
    android:id="@+id/contact_layout">

    <View
        android:id="@+id/view1"
        android:layout_width="300sp"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"

        android:background="#003366" />
    <View
        android:layout_width="300sp"
        android:layout_height="1px"
        android:background="#003366"
        android:id="@+id/view1.0"

        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4sp"
        />
    <View
        android:layout_width="300sp"
        android:layout_height="1px"
        android:background="#003366"
        android:id="@+id/view1.1"
        android:layout_below="@+id/edit_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4sp"
        />


    <EditText
        android:layout_width="200sp"
        android:layout_height="30sp"
        android:id="@+id/edit_name"
        android:background="@null"
        android:textColor="#003366"
        android:hint=" Name"
        android:textColorHint="#003366"
        android:layout_marginLeft="3sp"
        android:maxLength="30"
        android:gravity="center|left"
        android:layout_below="@+id/view1"
        android:layout_alignEnd="@+id/view1"
        android:layout_marginTop="9sp" />


    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="200sp"
        android:layout_height="30sp"
        android:layout_below="@+id/view1.0"
        android:layout_alignStart="@+id/edit_name"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignEnd="@+id/edit_name"
        android:layout_alignRight="@+id/edit_name"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@null"
        android:gravity="center|left"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="30"
        android:textColor="#003366"
        android:textColorHint="#003366" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_alignStart="@+id/imageView1.0"
        android:layout_alignTop="@+id/edit_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/user_32px" />

    <ImageView
        android:id="@+id/imageView1.0"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_alignStart="@+id/view1.1"
        android:layout_alignLeft="@+id/view1.1"
        android:layout_alignTop="@+id/edit_phone"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-1dp"
        android:src="@drawable/mobile" />

    <TextView
        android:id="@+id/text_edit"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_below="@+id/view1.1"
        android:layout_alignStart="@+id/view1.1"
        android:layout_alignEnd="@+id/view1.1"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_back2"
        android:gravity="center_vertical|center_horizontal"
        android:text="UPDATE"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>